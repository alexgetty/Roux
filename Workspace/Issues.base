filters:
  and:
    - file.folder == "docs/issues"
    - file.folder != "docs/issues/archive"
views:
  - type: table
    name: Table
    order:
      - file.name
      - status
      - priority
      - phase
      - parent
    sort:
      - property: priority
        direction: DESC
    columnSize:
      file.name: 318
  - type: cards
    name: View
    order:
      - file.name
      - priority
